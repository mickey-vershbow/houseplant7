<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/head") %>
  <body>
    <!-- THE HEADER TAG PARTIAL -->
    <%- include("../partials/header") %>

  <section class="hero is-primary is-small has-text-centered">
      <div class="hero-body">
        <p class="title is-small">Edit "<%= plant.name %>"</p>
      </div>
    </section>
        <br>

<main>

<!-- EDIT FORM -->

  <form action="/user/profile/<%= plant._id %>?_method=PUT" method="POST">

    <!---------- NAME ------------>
                <div class="box" id="edit-form">
                <div class="field">
                  <label class="label">Name</label>
                  <div class="control">
                    <input class="input" type="text" name="name" value="<%=plant.name%>" placeholder="<%=plant.name%>"><br/>
                  </div>
                </div>

<!---------- IMAGE ------------>
                <div class="box" id="edit-form">
                <div class="field">
                  <label class="label">Image URL</label>
                  <div class="control">
                    <input class="input" type="text" name="url" value="<%=plant.url%>" placeholder="<%=plant.url%>"><br/>
                  </div>
                </div>

<!---------- PETSAFE ------------>

                <div class="field">
                  <label class="label">Safe for pets and children?</label>
                  <div class="control">
                    <input class="input" type="text" name="petsafe" value="<%=plant.petsafe%>" placeholder="<%=plant.petsafe%>"><br/>
                  </div>
                </div>

<!---------- ORIGIN ------------>

                <div class="field">
                  <label class="label">Plant Origin</label>
                  <div class="control">
                    <input class="input" type="text" name="origin" value="<%=plant.origin%>" placeholder="<%=plant.origin%>"><br/>
                  </div>
                </div>

<!---------- DESCRIPTION ------------>
                <div class="field">
                  <label class="label">Description</label>
                  <div class="control">
                    <textarea class="textarea" type="text" name="description" value="<%=plant.description%>" placeholder="<%=plant.description%>"></textarea>
                  </div>
                </div>


<!---------- SUBMIT ------------>
                <div class="field is-grouped">
                  <div class="control">
                    <button class="button is-link">Submit</button>
                  </div>
                  <div class="control">
                    <button class="button is-link is-light">Cancel</button>
                  </div>
                </div>
                </div>




<!-- DELETE FORM  -->
  <form action="/user/profile/<%=plant._id%>?_method=DELETE" method="POST" class ="deleteLink">
    <input type="submit" value="DELETE" />
  </form>

  



</main>
