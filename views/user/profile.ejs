<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/head") %>
  <body>
    <!-- THE HEADER TAG PARTIAL -->
    <%- include("../partials/header") %>

    <!-- DISPLAY OUR PLANTS -->

    <section class="hero is-primary has-text-centered">
      <div class="hero-body">
        <p class="title">Your Personal Plant Collection </p>
        <p class="subtitle">
          Click on a plant to view details
        </p>
      </div>
    </section>

      <div class="container is-fluid">
    <% for(let i = 0; i < plants.length; i++) { %>
      <br>
      <figure class="image is-128x128">
        <!-- SHOW PAGE -->
        <a href="/user/profile/<%=plants[i].id;%>"></a>
          <img src="<%= User.plant.url %>" />
      </a>
        <p class="has-text-centered"><%= plant.name %></p>
    <% } %>
      </figure>
      <br><br><br><br>
    </div>

    <a class="button is-info" id="add-new-plant-button" href="/user/new">Add A New Plant</a>




    <!-- THE FOOTER PARTIAL -->
    <%- include("../partials/footer") %>


  </body>
</html>
